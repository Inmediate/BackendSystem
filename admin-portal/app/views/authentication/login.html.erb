<div class="container">


  <%= form_tag(login_submit_path, {class:'form-signin'}) do %>
    <div><%= flash_messages %></div>
    <h2 class="form-signin-heading" style="text-align: center">Insurer Market Admin Portal</h2>
    <%= label_tag(:q, "Search for:", class: 'sr-only') %>
    <%= email_field_tag(:email, nil, class: 'form-control', placeholder: "Email Address", required: true, autofocus: true ) %>
    <%= label_tag(:q, "Search for:", class:'sr-only') %>
    <%= password_field_tag(:password, nil, class: 'form-control', placeholder: "Password", required: true) %>
    <div class="checkbox">
    </div>
    <%= submit_tag("Sign in", class: 'btn btn-lg btn-primary btn-block') %>
    <a href="/password/forgot" style="margin-top: 115px;">Forgot your password?</a>

<% end %>


</div>